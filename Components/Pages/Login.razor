@page "/"
@inject AuthService AuthService
@inject NavigationManager Navigation

@using System.ComponentModel.DataAnnotations

<div class="container">

    <div class="logo-container">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
            <path d="M438.6 105.4c12.5 12.5 12.5 32.8 0 45.3l-256 256c-12.5 12.5-32.8 12.5-45.3 0l-128-128c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 338.7 393.4 105.4c12.5-12.5 32.8-12.5 45.3 0z"/>
        </svg>
        <h1>ToDoNBH</h1>
    </div>

    <div class="form-container">
<EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="form" name="loginForm">
            <DataAnnotationsValidator />
            <ValidationSummary />
            
            <p class="form-title">Sign in to your account</p>

            <div class="input-container">
                <InputText @bind-Value="loginModel.Username" type="email" placeholder="Enter email" />
                <span>
                    <svg stroke="currentColor" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" stroke-width="2" stroke-linejoin="round" stroke-linecap="round"></path>
                    </svg>
                </span>
            </div>

            <div class="input-container">
                <InputText @bind-Value="loginModel.Password" type="password" placeholder="Enter password" />
                <span>
                    <svg stroke="currentColor" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" stroke-width="2" stroke-linejoin="round" stroke-linecap="round"></path>
                        <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" stroke-width="2" stroke-linejoin="round" stroke-linecap="round"></path>
                    </svg>
                </span>
            </div>

            <button class="submit" type="submit">Sign in</button>

            @if (loginFailed)
            {
                <p class="text-danger">Fel användarnamn eller lösenord</p>
            }

            <p class="signup-link">
                No account?
                <a href="">Sign up</a>
            </p>
        </EditForm>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private bool loginFailed = false;

    private async Task HandleLogin()
    {
        var user = await AuthService.LoginAsync(loginModel.Username, loginModel.Password);
        if (user != null)
        {
            Navigation.NavigateTo("/");
        }
        else
        {
            loginFailed = true;
        }
    }

    public class LoginModel
    {
        [Required]
        public string Username { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }
}
