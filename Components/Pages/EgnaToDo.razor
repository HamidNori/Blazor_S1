@page "/"
@rendermode InteractiveServer
@using Blazor_S1.Services.Models
@using Blazor_S1.Services.TodoService
@using Blazor_S1.Services.CustomTodo
@inject TodoService TodoService

@inject IJSRuntime JS


<div class="swiper">
    <div class="swiper-wrapper">
        <div id="1" class="swiper-slide">
            <ul id="accordion">
                @foreach (var day in TodoService.GetAllDays())
                {
                    var isFirst = day.Key == "M√ÖNDAG";
                    <li>
                        <label for="@day.Key">@day.Name</label>
                        <input type="radio" name="accordion" id="@day.Key" checked="@isFirst">

                        <div class="content">
                            <div class="inner-content">
                                <p>@GetDateForDay(day.Key)</p>

                                <div class="Lista">
                                    @foreach (var todo in day.Todos)
                                    {
                                        <div>
                                            <input type="checkbox" 
                                                   checked="@todo.IsCompleted" 
                                                   @onchange="() => ToggleTodo(day.Key, todo.Id)">
                                            <span class="inner-text @(todo.IsCompleted ? "completed" : "")">
                                                @todo.Text
                                            </span>
                                            <button @onclick="() => DeleteTodo(day.Key, todo.Id)">üóëÔ∏è</button>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="Skapa">
                                <input type="text" 
                                       placeholder="Skapa nytt..." 
                                       @bind="newTodoTexts[day.Key]"
                                       @onkeypress="(e) => HandleKeyPress(e, day.Key)"/>
                                <button @onclick="() => AddTodo(day.Key)">L√§gg till</button>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div id="slider-2" class="swiper-slide">
            <div class="content-sida2">
                <div class="title-sida2">
                    <h1>ANPASSANDE LISTOR</h1>
                </div>

                <div class="list-content">
                    <ul>
                        
                        <button class="btn btn-primary" @onclick="ShowCreateDialog">+</button>

                        @if (showDialog)
                        {
                            <div class="popup">
                                <h4>Vilken typ av lista vill du skapa?</h4>
                                <button class="btn btn-secondary" @onclick = "CreateShopping">Shoppinglista</button>
                                <button class="btn btn-secondary" @onclick = "CreateWork">Arbetslista</button>
                                <button class="btn btn-secondary" @onclick = "CreateWorkout">Tr√§ningslista</button>
                            </div>
                        }

                        <ul>
                            @foreach (var list in customTodoLists)
                            {
                                <li>@list.Title (@list.ListType)</li>
                            }
                        </ul>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    private Dictionary<string, string> newTodoTexts = new Dictionary<string, string>();

    protected override void OnInitialized()
    {
        // Initiera dictionary med r√§tt nycklar fr√•n TodoService
        foreach (var day in TodoService.GetAllDays())
        {
            newTodoTexts[day.Key] = "";
        }
    }

    private void AddTodo(string dayKey)
    {
        if (newTodoTexts.ContainsKey(dayKey) && !string.IsNullOrWhiteSpace(newTodoTexts[dayKey]))
        {
            TodoService.AddTodoToDay(dayKey, newTodoTexts[dayKey]);
            newTodoTexts[dayKey] = "";
        }
    }

    private void ToggleTodo(string dayKey, int todoId)
    {
        TodoService.ToggleTodoInDay(dayKey, todoId);
    }

    private void DeleteTodo(string dayKey, int todoId)
    {
        TodoService.RemoveTodoFromDay(dayKey, todoId);
    }

    private void HandleKeyPress(KeyboardEventArgs e, string dayKey)
    {
        if (e.Key == "Enter")
        {
            AddTodo(dayKey);
        }
    }

    private string GetDateForDay(string dayKey)
    {
        var today = DateTime.Now;
        var daysOfWeek = new[] { "M√ÖNDAG", "TISDAG", "ONSDAG", "TORSDAG", "FREDAG", "L√ñRDAG", "S√ñNDAG" };
        var index = Array.IndexOf(daysOfWeek, dayKey);
        
        if (index >= 0)
        {
            var currentDayOfWeek = (int)today.DayOfWeek;
            if (currentDayOfWeek == 0) currentDayOfWeek = 7;
            
            var diff = index + 1 - currentDayOfWeek;
            var targetDate = today.AddDays(diff);
            
            return targetDate.ToString("MMMM dd, yyyy", new System.Globalization.CultureInfo("sv-SE"));
        }
        
        return "";
    }

    @code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Task.Delay(100); 
            await JS.InvokeVoidAsync("initSwiper");
        }
    }
}

}

@code 
{
    void CreateShopping() => CreateList("ShoppingList");
    void CreateWork()    => CreateList("WorkTaskList");
    void CreateWorkout() => CreateList("WorkoutList");
    private bool showDialog = false;
    private List<AbstractCustomTodo> customTodoLists = new();

    void ShowCreateDialog()
    {
        showDialog = true;
    }

    void CreateList(string type)
    {
        var list = CustomTodoFactory.Create(type);
        customTodoLists.Add(list);
        showDialog = false;
    }
}